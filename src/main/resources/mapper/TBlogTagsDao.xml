<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="blog.mapper.TBlogTagsDao">

    <resultMap type="blog.entity.TBlogTags" id="TBlogTagsMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="tagId" column="tag_id" jdbcType="INTEGER"/>
        <result property="blogId" column="blog_id" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TBlogTagsMap">
        select id,
               tag_id,
               blog_id
        from blog_dev.t_blog_tags
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TBlogTagsMap">
        select id,
               tag_id,
               blog_id
        from blog_dev.t_blog_tags
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TBlogTagsMap">
        select
        id, tag_id, blog_id
        from blog_dev.t_blog_tags
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="tagId != null">
                and tag_id = #{tagId}
            </if>
            <if test="blogId != null and blogId != ''">
                and blog_id = #{blogId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into blog_dev.t_blog_tags(tag_id, blog_id)
        values (#{tagId}, #{blogId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update blog_dev.t_blog_tags
        <set>
            <if test="tagId != null">
                tag_id = #{tagId},
            </if>
            <if test="blogId != null and blogId != ''">
                blog_id = #{blogId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from blog_dev.t_blog_tags
        where id = #{id}
    </delete>

</mapper>